@Root
Main := $Box(fill = #000) {
    $MarginBox(all = 16) {
        $Text(fill = #eee, font = $Font(family = "Arial", size = 20)) {
            $ToString(separator = ", ") {
                $Sin(x = 180, unit = "deg")
                $Cos(x = 180, unit = "deg")
                $Tan(x = 180, unit = "deg")
                $Greater(x = 3, than = 5)
            }
        }
    }
}