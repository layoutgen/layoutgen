GrayOrWhite := [2] #fff | #888 | #f00

GridOrCircle := $Circle(fill = GrayOrWhite)
             |  $Grid(rows = 2, cols = 2) {
                    $Repeat(count = 4) { GridOrCircle }
                }

@Root
Main := $Box(fill = $RGB(r = 0, g = 0, b = 0)) {
    $Grid(rows = 2, cols = 2) {
        $Repeat(count = 4) { GridOrCircle }
    }
}